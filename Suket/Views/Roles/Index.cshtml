@model List<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Roles</h1>
<a asp-action="Create">Create Role</a>
<table class="table">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" method="post" class="delete-form">
                        <input type="hidden" name="id" value="@role.Id" />
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        window.onload = function () {
            var deleteForms = document.getElementsByClassName('delete-form');
            for (var i = 0; i < deleteForms.length; i++) {
                deleteForms[i].addEventListener('submit', function (event) {
                    var confirmDelete = confirm('Are you sure you want to delete this role?');
                    if (!confirmDelete) {
                        event.preventDefault();
                    }
                });
            }
        };
    </script>
}
